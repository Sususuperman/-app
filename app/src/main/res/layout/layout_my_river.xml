<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/river_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/explane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_btn_default"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_water_level" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:drawableLeft="@drawable/icon_question"
            android:drawablePadding="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_5dp"
            android:text="水质类别说明"
            android:textColor="@color/font_blue"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:text="河道水质信息"
        android:textColor="@color/font_1"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/activity_bg_default" />

    <com.hywy.publichzt.view.MyRecycleView
        android:id="@+id/river_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
